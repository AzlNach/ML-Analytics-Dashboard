# Development Environment Configuration
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=app.py
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000

# Machine Learning Configuration
ML_MODEL_DIR=models
ML_TRAINING_DATA_DIR=../training_data
ML_MAX_MODELS=10
ML_DEFAULT_TEST_SIZE=0.2
ML_DEFAULT_CV_FOLDS=5

# API Configuration
API_PREFIX=/api
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=csv,xlsx,xls

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=../logs/ml_dashboard.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Performance Configuration
CELERY_BROKER_URL=redis://localhost:6379/0  # For background tasks (optional)
CACHE_TYPE=simple  # simple, redis, memcached
